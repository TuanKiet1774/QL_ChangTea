@model IEnumerable<Demo_ChangTea.Models.NhanVien>

@{
    ViewBag.Title = "Danh sách nhân viên";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    string gtinh = "";
}

<style>
    #btn-create {
        border: 1px solid rgba(12,67,150,255);
        padding: 8px;
        color: black;
        width: fit-content;
        background-color: none;
    }

        #btn-create:hover {
            color: black;
            background-color: #ffe459;
            transform: scale(1.1);
        }
</style>

<h2><b>Danh sách nhân viên của quán</b></h2>

<div id="btn-create">
    <i class="fa-solid fa-plus"></i>
    @Html.ActionLink("Thêm nhân viên mới", "Create", null, new { @style = "color: black; text-decoration: none;" })
</div>
<table class="table">
    <tr>
        <th>
            Mã số 
        </th>
        <th>
            Họ
        </th>
        <th>
            Tên
        </th>
        <th>
            Giới tính
        </th>
        <th>
            Ngày sinh
        </th>
        <th>
            SĐT
        </th>
        <th>
            Địa chỉ
        </th>
        <th>
            Chức vụ
        </th>
        <th>
            Ngày làm việc
        </th>
        <th>
            Tùy chọn
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaNV)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HoNV)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenNV)
        </td>
        <td>

            @{
                if (item.GioiTinh == true)
                {
                    gtinh = "Nam";
                }
                else
                {
                    gtinh = "Nữ";
                }
            }
            @gtinh
        </td>
        <td>
            @(item.NgaySinh.HasValue ? item.NgaySinh.Value.ToString("dd/MM/yyyy") : "N/A")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoDT)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiaChi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ChucVu.ChucVu1)
        </td>
        <td>
            @(item.NgayLamViec.HasValue ? item.NgayLamViec.Value.ToString("dd/MM/yyyy") : "N/A")
        </td>
        <td>
            <a href="@Url.Action("Edit",new { id = item.MaNV})" class="edit-btn">
                <abbr title="Cập nhật dữ liệu">
                    <img src="/images/edit.png" width="20" height="20" />
                </abbr>
            </a>
            <a href="@Url.Action("Details",new { id = item.MaNV})" class="edit-btn">
                <abbr title="Xem chi tiết">
                    <img src="/images/details.png" width="20" height="20" />
                </abbr>
            </a>
            <a href="@Url.Action("Delete",new { id = item.MaNV})" class="edit-btn">
                <abbr title="Xóa dữ liệu">
                    <img src="/images/delete.png" width="20" height="20" />
                </abbr>
            </a>
        </td>
    </tr>
}

</table>
