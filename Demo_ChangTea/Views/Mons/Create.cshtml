@model Demo_ChangTea.Models.Mon

@{
    ViewBag.Title = "Thêm món mới";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    #btn-back {
        border: 1px solid blue;
        border-radius: 5px;
        width: fit-content;
        padding: 5px;
        margin-top: 20px;
    }

        #btn-back:hover {
            color: black;
            background-color: #ffe459;
            transform: scale(1.1);
        }

    .btn-create {
        color: rgba(12,67,150,255);
        width: fit-content;
        background-color: none;
    }

        .btn-create:hover {
            color: #ffe459;
            background-color: green;
            transform: scale(1.1);
        }
</style>

<h2><b>Thêm món mới</b></h2>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="form-horizontal d-flex">
    <div>
        <div class="form-group">
            <b>Mã món</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaMon, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaMon, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <b>Tên món</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenMon, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenMon, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <b>Ảnh món</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.AnhMon, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AnhMon, "", new { @class = "text-danger" })
                <input type="file" name="Avatar" id="Avatar" value="chọn ảnh" />
            </div>
        </div>

        <div class="form-group">
            <b>Size</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Size, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Size, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div>
        <div class="form-group">
            <b>Đơn vị</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.DonVi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DonVi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <b>Đơn giá</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.DonGia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DonGia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <b>Mô tả</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mt-3">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm mới" class="btn btn-create btn-default btn-outline-primary" />
            </div>
        </div>
    </div>
</div>
}

<div id="btn-back">
    @Html.ActionLink("Quay lại", "Index")
</div>
