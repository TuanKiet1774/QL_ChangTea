@model Demo_ChangTea.Models.Mon

@{
    ViewBag.Title = "Xóa món";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    th {
        border: 1px solid black;
        padding: 8px;
        text-align: left;
    }

    td {
        border: 1px solid black;
        padding: 8px;
    }

    .btn-back{
        padding: 5px;
        text-align: center;
        margin-right: 10px;
        border: 1px solid blue;
        border-radius: 5px;
        width: 100px;
        margin-top: 20px;
    }
        .btn-back:hover{
            color: black;
            background-color: #ffe459;
            transform: scale(1.1);
        }

    .btn-del {
        color: rgba(12,67,150,255);
        margin-right: 10px;
        border: 1px solid blue;
        border-radius: 5px;
        width: fit-content;
        margin-top: 20px;
    }

        .btn-del:hover {
            color: #ffe459;
            background-color: red;
            transform: scale(1.1);
        }
</style>

<h2>
    <b style="color: red;">
        <i class="fa-solid fa-circle-question"></i>
        Bạn có chắc chắn là muốn xóa món này không ?
    </b>
</h2>
<hr />
<div style="display: flex;">
    <!-- Hình ảnh -->
    <img src="~/Images/@Html.DisplayFor(model => model.AnhMon)" alt="" width="330" style="margin-inline: 50px;" />

    <!-- Bảng thông tin -->
    <table style="border-collapse: collapse; width: 70%; margin-left: 20px; font-family: Arial, sans-serif;">
        <thead>
            <tr style="background-color: #ffe459;">
                <th>Thông tin</th>
                <th>Giá trị</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Mã món</td>
                <td>@Html.DisplayFor(model => model.MaMon)</td>
            </tr>
            <tr>
                <td>Tên món</td>
                <td>@Html.DisplayFor(model => model.TenMon)</td>
            </tr>
            <tr>
                <td>Ảnh món</td>
                <td>@Html.DisplayFor(model => model.AnhMon)</td>
            </tr>
            <tr>
                <td>Size</td>
                <td>@Html.DisplayFor(model => model.MaKichThuoc)</td>
            </tr>
            <tr>
                <td>Đơn vị</td>
                <td>@Html.DisplayFor(model => model.DonVi)</td>
            </tr>
            <tr>
                <td>Đơn giá</td>
                <td>@Html.DisplayFor(model => model.DonGia)</td>
            </tr>
            <tr>
                <td>Mô tả</td>
                <td>@Html.DisplayFor(model => model.MoTa)</td>
            </tr>
        </tbody>
    </table>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div style="display: flex;">
    <div class="btn-del">
        <input type="submit" value="Delete" class="btn btn-default" />
    </div>
    <div class="btn-back">
        @Html.ActionLink("Quay lại", "Index_Admin")
    </div>
</div>
}
