@model IEnumerable<Demo_ChangTea.Models.Mon>

@{
    ViewBag.Title = "Menu";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    #btn-create {
        border: 1px solid rgba(12,67,150,255);
        padding: 8px;
        color: black;
        width: fit-content;
        background-color: none;
    }

        #btn-create:hover {
            color: black;
            background-color: #ffe459;
            transform: scale(1.1);
        }
</style>

<h2><b>Thực Đơn</b></h2>
<div style="display: flex; justify-content: space-between;">
    <div id="btn-create">
        <i class="fa-solid fa-plus"></i>
        @Html.ActionLink("Thêm món mới", "Login","Account", null, new { @style = "color: black; text-decoration: none;" })
    </div>
    <div id="btn-create">
        <i class="fa-solid fa-plus"></i>
        @Html.ActionLink("Xem chi tiết đơn hàng", "Invoice", null, new { @style = "color: black; text-decoration: none;" })
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Mã món</th>
            <th>Tên món</th>
            <th>Hình ảnh</th>
            <th>Size</th>
            <th>Đơn vị</th>
            <th>Đơn giá</th>
            <th>Mô tả</th>
            <th>Tùy chọn</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.MaMon)</td>
                <td>@Html.DisplayFor(modelItem => item.TenMon)</td>
                <td>
                    <img src="~/Images/@Html.DisplayFor(modelItem => item.AnhMon)" alt="" width="100" height="100" />
                </td>
                <td>@Html.DisplayFor(modelItem => item.MaKichThuoc)</td>
                <td>@Html.DisplayFor(modelItem => item.DonVi)</td>
                <td>@Html.Raw(string.Format("{0:0.#} VND", item.DonGia))</td>
                <td>@Html.DisplayFor(modelItem => item.MoTa)</td>
                <td>
                    <a href="@Url.Action("Edit",new { id = item.MaMon})" class="edit-btn">
                        <abbr title="Cập nhật dữ liệu">
                            <img src="/images/edit.png" width="20" height="20" />
                        </abbr>
                    </a>
                    <a href="@Url.Action("Details",new { id = item.MaMon})" class="edit-btn">
                        <abbr title="Xem chi tiết">
                            <img src="/images/details.png" width="20" height="20" />
                        </abbr>
                    </a>
                    <a href="@Url.Action("Delete",new { id = item.MaMon})" class="edit-btn">
                        <abbr title="Xóa dữ liệu">
                            <img src="/images/delete.png" width="20" height="20" />
                        </abbr>
                    </a>
                </td>
                <td>
                    <a href="@Url.Action("AddToInvoice", "Mons", new { id = item.MaMon })" class="add-to-invoice-btn">
                        <abbr title="Thêm vào hóa đơn">
                            <i class="fa-solid fa-square-plus fs-4"></i>
                        </abbr>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>