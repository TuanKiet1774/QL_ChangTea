@model Demo_ChangTea.Models.HoaDon

@{
    ViewBag.Title = "Tạo hóa đơn";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    #btn-back {
        border: 1px solid blue;
        border-radius: 5px;
        width: fit-content;
        padding: 5px;
        margin-top: 20px;
    }

        #btn-back:hover {
            color: black;
            background-color: #ffe459;
            transform: scale(1.1);
        }

    .btn-create {
        color: rgba(12,67,150,255);
        width: fit-content;
        background-color: none;
    }

        .btn-create:hover {
            color: #ffe459;
            background-color: green;
            transform: scale(1.1);
        }
</style>

<h2><b>Tạo hóa đơn</b></h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal d-flex">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div>
            <div class="form-group">
                <b>Mã hóa đơn</b>
                <div class="col-md-10" style="width: 200px;">
                    @Html.EditorFor(model => model.MaHD, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MaHD, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <b>Mã đơn hàng</b>
                <div class="col-md-10" style="width: 200px;">
                    @Html.EditorFor(model => model.MaDH, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MaDH, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <b>Mã nhân viên</b>
                <div class="col-md-10" style="width: 200px;">
                    @Html.EditorFor(model => model.MaNV, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MaNV, "", new { @class = "text-danger" })
                </div>
            </div>

            <div id="btn-back">
                @Html.ActionLink("Quay lại", "Index")
            </div>
        </div>

        <div class="ms-5">
            <div class="form-group">
                <b>Mã khách hàng</b>
                <div class="col-md-10" style="width: 200px;">
                    @Html.EditorFor(model => model.MaKH, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MaKH, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <b>Thời gian</b>
                <div class="col-md-10" style="width: 200px;">
                    @Html.EditorFor(model => model.ThoiGianLap, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ThoiGianLap, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <b>Giảm giá</b>
                <div class="col-md-10" style="width: 200px;">
                    @Html.EditorFor(model => model.GiamGia, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.GiamGia, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group mt-3">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Tạo mới" class="btn btn-create btn-outline-primary btn-default" />
                </div>
            </div>
        </div>
    </div>
}


