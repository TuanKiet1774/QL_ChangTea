@model Demo_ChangTea.Models.HoaDon

@{
    ViewBag.Title = "Chi tiết thông tin hóa đơn";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    th {
        border: 1px solid black;
        padding: 8px;
        text-align: left;
    }

    td {
        border: 1px solid black;
        padding: 8px;
    }

    .btn-back, .btn-edit {
        margin-right: 10px;
        border: 1px solid blue;
        border-radius: 5px;
        width: fit-content;
        padding: 5px;
        margin-top: 20px;
    }

        .btn-back:hover, .btn-edit:hover {
            color: black;
            background-color: #ffe459;
            transform: scale(1.1);
        }
</style>

<h2><b>Chi tiết thông tin hóa đơn</b></h2>
<hr />
<table style="border-collapse: collapse; width: 70%; margin-left: 20px; font-family: Arial, sans-serif;">
    <thead>
        <tr style="background-color: #ffe459;">
            <th>Thông tin</th>
            <th>Giá trị</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Mã hóa đơn</td>
            <td>@Html.DisplayFor(model => model.MaHD)</td>
        </tr>
        <tr>
            <td>Mã đơn hàng</td>
            <td>@Html.DisplayFor(model => model.MaDH)</td>
        </tr>
        <tr>
            <td>Mã khách hàng</td>
            <td>@Html.DisplayFor(model => model.KhachHang.TenKH)</td>
        </tr>
        <tr>
            <td>Thời gian</td>
            <td>@Html.DisplayFor(model => model.ThoiGianLap)</td>
        </tr>
        <tr>
            <td>Nhân viên</td>
            <td>@Html.DisplayFor(model => model.NhanVien.TenNV)</td>
        </tr>
        <tr>
            <td>Giảm giá</td>
            <td>@string.Format("{0:0}%", Model.GiamGia * 100)</td>
        </tr>
        <tr>
            <td>Phương thức thành toán</td>
            <td>@Html.DisplayFor(model => model.PT_ThanhToan.PhuongThuc)</td>
        </tr>
    </tbody>
</table>

<div style="display: flex;">
    <div class="btn-edit">
        @Html.ActionLink("Chỉnh sửa", "Edit", new { id = Model.MaHD })
    </div>
    <div class="btn-back">
        @Html.ActionLink("Quay lại", "Index")
    </div>
</div>
