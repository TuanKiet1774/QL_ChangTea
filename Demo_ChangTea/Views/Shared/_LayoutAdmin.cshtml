<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    <link href="~/Content/styleAdmin.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://site-assets.fontawesome.com/releases/v6.2.0/css/all.css" />
</head>
<body>
    <!-- Banner -->
    <div id="banner">
        <img src="~/Images/banner.jpg" style="width: 220px;" />
        <div style="text-align: right; font-weight: 500; color: rgba(12,67,150,255);">
            <div>
                <i class="fa-solid fa-location-dot text-danger"></i>
                119 KP Khánh Hoà, P.Tân Phước Khánh,<br /> Tân Uyên, Bình Dương
            </div>
            <div>
                <i class="fa-solid fa-location-dot text-danger"></i>
                15 Lam Sơn, Nha Trang
            </div>
        </div>
    </div>

    <!-- Menu và Nội dung -->
    <div style="display: flex; flex-direction: row; height: 100%;">
        <!-- Menu -->
        <div id="menu" style="padding-top: 0;">
            <div class="select">
                @Html.ActionLink("MENU", "../Mons/Index", new { @class = "a" })
            </div>
            <div class="select">
                @Html.ActionLink("HÓA ĐƠN", "../HoaDons/Index", new { @class = "a" })
            </div>
            <div class="select">
                @Html.ActionLink("NHÂN VIÊN", "../Account/Login_NV", new { @class = "a" })
            </div>
            <div class="select">
                @Html.ActionLink("KHO", "../Account/Login_Kho", new { @class = "a" })
            </div>
            <div class="select">
                @Html.ActionLink("DOANH THU", "../Account/Login_DoanhThu", new { @class = "a" })
            </div>
        </div>

        <!-- Content -->
        <div id="content">
            @RenderBody()
        </div>
    </div>

    <!-- Footer -->
    <div id="footer">
        <div style="display: flex; justify-content: space-between;">
            <div style="text-align: left; margin-left: 50px;">
                <ul style="list-style: none; display: flex;">
                    <li>
                        <b>Thành viên nhóm:</b><br />
                        <i class="fa-solid fa-user"></i>
                        Cao Linh Hà - 64130493<br />
                        <i class="fa-solid fa-user"></i>
                        Nguyễn Hồ Thanh Bình - 64130152<br />
                        <i class="fa-solid fa-user"></i>
                        Nguyễn Hiểu Quyên - 64131973<br />
